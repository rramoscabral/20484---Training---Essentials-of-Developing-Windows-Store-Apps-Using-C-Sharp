<Page
    x:Class="ContosoPhoto.MainPage"
    IsTabStop="false"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ContosoPhoto"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <CommandBar x:ConnectionId='2'                           >
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='3'                               Icon="Repair" x:Name="RedEyeButton" IsEnabled="False" Label="Red Eye"/>
                <AppBarButton x:ConnectionId='4'                                 Icon="Edit" x:Name="AnnotateButton" Label="Annotate"/>

            </CommandBar.PrimaryCommands>

            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='5'                             Icon="OpenFile" x:Name="OpenButton" Label="Open"/>
                <AppBarButton x:ConnectionId='6'                             Icon="Save" x:Name="SaveButton" Label="Save"/>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid x:ConnectionId='7' x:Name="LayoutRoot" Background="White"                                        Margin="0,2,0,-2"                                                     >
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:ConnectionId='11' x:Name="OpeningMessage" Text="Tap here to open a photo" Foreground="#FF4080E0" FontSize="48"                                />
        </Border>
        <Grid RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <CompositeTransform x:ConnectionId='8' x:Name="PhotoTransform" />
            </Grid.RenderTransform>
            <Image x:ConnectionId='9' x:Name="Photo" Margin="20" Width="600"                       ManipulationMode="All"                                             />
            <Canvas x:ConnectionId='10' x:Name="AnnotateCanvas" Background="Transparent" IsHitTestVisible="False"                                                                                                                                                         />
        </Grid>
    </Grid>

</Page>

