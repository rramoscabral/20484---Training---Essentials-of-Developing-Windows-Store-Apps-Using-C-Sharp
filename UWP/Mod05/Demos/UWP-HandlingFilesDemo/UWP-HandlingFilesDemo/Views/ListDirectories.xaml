<Page
    x:Class="UWP_HandlingFilesDemo.Views.ListDirectories"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_HandlingFilesDemo.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <Button x:Name="btn1" Height="100" Width="250" Content="Listar Directorias" HorizontalAlignment="Center"  VerticalAlignment="Center" Background="Azure" Click="Btn1_Click" FontSize="20"/>
            <ListView CanDragItems="False" CanReorderItems="True" AllowDrop="True" SelectionMode="None" VerticalAlignment="Top"  ItemsSource="{x:Bind folderItems}" FontSize="15"/>
        
        </StackPanel>
    </Grid>
</Page>
