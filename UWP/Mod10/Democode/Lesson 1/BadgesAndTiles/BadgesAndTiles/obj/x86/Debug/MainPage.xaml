<Page
    x:Class="BadgesAndTiles.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BadgesAndTiles"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="40" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="40" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Page.Resources>

    <Grid  Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Result:" Margin="5" />
                <TextBlock x:ConnectionId='9' Name="result" Margin="5" Foreground="Green"/>
            </StackPanel>
            <Button x:ConnectionId='2' Content="Clear Tile Notification"                               />
            <Button x:ConnectionId='3' Content="Send Tile Notification"                             />
            <Button x:ConnectionId='4' Content="Notification with Image"                              />
            <TextBlock Text="Notification Queue:" Margin="5" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:ConnectionId='7' Content="Enable"                                 />
                <Button x:ConnectionId='8' Content="Disable"                                  />
            </StackPanel>
            <TextBlock Text="Badge:" Margin="5" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:ConnectionId='5' Content="Send"                               />
                <Button x:ConnectionId='6' Content="Clear"                                />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

